<header class="strip header">
  <div class="header">
    <div class="header-title grid">
      <img src="assets/connected-title.png">
    </div>
    <div class="welcome-name grid">
      <p>Welcome, <span id="greeting-name"><%=  current_user.full_name %></span> </p>
    </div>
    <div class="out grid">
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "log-out" %>
    </div>
  </div>
</header>

<div class="container">
    <div class="row" ng-controller="ContactListCtrl">
      <div class="col-md-4" style="background2:red;">

        <div>
           <button type="button" class="btn btn-default btn-lg btn-block" ng-repeat="contact in contacts" ng-click="select(contact)">
             {{contact.firstname}} {{contact.lastname}}
             <a href="#" class="btn" ng-click="deleteContact(contact)">X</a>
           </button>
        </div>

      </div>

      <div class="col-md-8" style="background2:blue;">
        <form ng-submit="saveContact()">
          <div class="page-header">
            <h1 ng-hide="adding">{{selectedContact.firstname}} {{selectedContact.lastname}}
              <span id="contact-icons">
                <img id="edit-icon" src="assets/edit.png">
                <img id="delete-icon" src="assets/delete.png">
              </span>
            </h1>
            <h1 ng-show="adding">
              <input type="text" ng-model="addedContact.firstname" placeholder="First name" required>
              <input type="text" ng-model="addedContact.lastname" placeholder="Last name" required>
            </h1>
          </div>


          <dl>
            <dt>Phone</dt>
            <dd>{{selectedContact.phone_cell}}</dd>
          </dl>

          <dl>
            <dt>Email</dt>
            <dd>{{selectedContact.email}}</dd>
          </dl>


          <dl>
            <dt>Address</dt>
            <dd>
              <address>
                {{selectedContact.address}}
              </address>
            </dd>
          </dl>

        <div id="bottom-icon" ng-hide="adding">
          <img id="add-icon" src="assets/add.png" ng-click="newContact()">
        </div>

            <input type="submit" ng-show="adding" value="Save" >
            <button ng-show="adding" ng-click="cancel()">Cancel</button>
        </form>
      </div>

    </div>
  </div>
</div>
